{
	"name": "vscode-tsconfig-helper",
	"version": "0.2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/johnsoncodehk/vscode-tsconfig-helper.git"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/johnsoncodehk"
	},
	"icon": "images/icon.png",
	"displayName": "TSConfig Helper",
	"description": "Extra features in tsconfig.json",
	"author": "johnsoncodehk",
	"publisher": "johnsoncodehk",
	"engines": {
		"vscode": "^1.67.0"
	},
	"activationEvents": [
		"onLanguage:jsonc"
	],
	"main": "out/extension",
	"scripts": {
		"build": "tsc",
		"watch": "tsc --watch",
		"pack": "yarn build && vsce package",
		"release": "yarn build && vsce publish"
	},
	"contributes": {
		"configuration": {
			"title": "tsconfig Helper",
			"properties": {
				"tsconfig-helper.extraFileExtensions.vue": {
					"type": "boolean",
					"default": true
				},
				"tsconfig-helper.extraFileExtensions.html": {
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"devDependencies": {
		"@types/node": "latest",
		"@types/vscode": "1.67.0",
		"typescript": "beta",
		"vsce": "latest"
	},
	"dependencies": {
		"jsonc-parser": "^3.2.0"
	}
}
